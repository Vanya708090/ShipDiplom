@using ShipDiplom.Models.Entities;
HTML
@model IEnumerable<Ship>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Все корабли</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>ID системы</th>
                        <th>Длина</th>
                        <th>Ширина</th>
                        <th>ID владельца</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ship in Model)
                    {
                        <tr>
                            <td>@ship.ShipType</td>
                            <td>@ship.SystemId</td>
                            <td>@ship.Length</td>
                            <td>@ship.Width</td>
                            <td>@ship.OwnerId</td>
                            <td>
                                <a href="@Url.Action("UpdateShip", "Ship", new { shipId = ship.Id })" class="btn btn-primary">Изменить</a>
                                <a href="@Url.Action("DeleteShip", "Ship", new { shipId = ship.Id })" class="btn btn-danger">Удалить</a>
                                <a href="@Url.Action("CanDockShips", "Ship", new { shipId = ship.Id })" class="btn btn-info">Проверить швартовку</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>