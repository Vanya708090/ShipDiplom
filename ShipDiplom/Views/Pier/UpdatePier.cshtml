@model ShipDiplom.Models.Entities.Pier

@using (Html.BeginForm("UpdatePier", "Pier", FormMethod.Post, new { id = "updateForm" }))
{
    @Html.AntiForgeryToken()

    <input type="hidden" id="pierId" name="Id" value="@Model.Id" />
    <h2>Обновление данных причала</h2>
    <div class="form-group">
        <label for="pierType">Наименование:</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label for="length">Длина:</label>
        @Html.EditorFor(model => model.Length, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label for="width">Ширина:</label>
        @Html.EditorFor(model => model.Width, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label for="trackingNumber">Трек номер:</label>
        @Html.EditorFor(model => model.TrackingNumber, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label for="location">Локация:</label>
        @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Обновить</button>
}
